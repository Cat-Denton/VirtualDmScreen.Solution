<link rel="stylesheet" href="~/css/styles.css" />
<h1> Welcome to Virtual Dm Screen </h1>

@if (@User.IsInRole("DM"))
{
 <select id="Status" name="Status" onchange="changeBackground(document.getElementsByTagName('BODY')[0], this);" class="form-control">
    <option style="background-image: url('/img/party.jpg');" value="party">Party of Adventurers</option>
    <option style="background-image: url('/img/reddragon.jpg');" value="redDragon">Red Dragon</option>
    <option style="background-image: url('/img/whitedragon.jpg');" value="whiteDragon">White Dragon</option>
    <option style="background-image: url('/img/firebreath.jpg');" value="fireBreath">FireBreath</option>
  </select>
  <script>
    function changeBackground(body, selectElement) {
      selectElement.options[selectElement.selectedIndex].style.backgroundImage
      body.setAttribute('style', 'background-image: ' + selectElement.options[selectElement.selectedIndex].style.backgroundImage + ';');
    }
  </script>
}
else
{
    <p>Blank's Screen</p>
}
  <hr>

<div class="container">
        <div class="row">
            <div class="col-3">
                <h5>Chat Box</h5>
                <p>Some text here!</p>
            </div>
            <div class="col-6">
            </div>
            <div class="col-3">
                <h5>Dice Box</h5>
                <p>Some text here!</p>
            </div>
        </div>
    <div>
        @* Empty Box *@
        <div class="row">
            <div class="col-2" id="emptyBox">
                  <p>@Html.ActionLink("Register/Login", "Index", "Account", null, new { id="OT", style = "color:red" })</p>
                  <p>@Html.ActionLink("Home", "Index", "Home")</p>
            </div>
        @* Player One *@
            <div class="col-2" id="playerOne">
                <h5>Player One</h5>
                <input type="button" id="upload" value="Upload Character" onclick="CreateCharacter()" />
                <script>
                    function CreateCharacter(element)
                    {
                        window.open('/Characters/Create', 'Characters', left=100,top=100,width=400,height=300,toolbar=0,resizable=0');
                    }
                </script>
            </div>
        @* Player Two *@
            <div class="col-2">
                <h5>Player Two</h5>
                <input type="button" id="upload" value="Upload Character" />
                <script>
                    window.open('/Characters/Create', 'Characters', 'left=100,top=100,width=400,height=300,toolbar=1,resizable=0');
                </script> 
            </div>
        @* Player Three *@
            <div class="col-2">
                <h5>Player Three</h5>
                <a href='javascript:openwindow();'>Upload Character</a>
                    <script>
                        function openwindow()
                        {
                            window.open('/Characters/Create', 'Characters', 'left=100,top=100,width=400, height=300');
                        }
                    </script>            
            </div>
        @* Player Four *@
            <div class="col-2">
                <h5>Player Four</h5>
                <input type="button" value="Upload Character" onclick="window.open('/Characters/Create', 'Characters', 'left=100,top=100,width=400, height=300');" />
            </div>
        @* Player Five *@
            <div class="col-2">
                <h5>Player Five</h5>
                <input type="button" value="Upload Character" />
            </div>
        </div>
    </div>
  </div>
