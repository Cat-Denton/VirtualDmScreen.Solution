@{
  Layout = "_Layout";
}

@model VirtualDmScreen.Models.Character
@using VirtualDmScreen.ViewModels

<h2>Create a character:</h2>
@using (Html.BeginForm())
{
  @Html.LabelFor(user => user.Name)
  @Html.TextBoxFor(user => user.Name)

  @Html.LabelFor(user => user.ImageUrl)
  @Html.TextBoxFor(user => user.ImageUrl)

  <input type="submit" value="Add new character" />
}